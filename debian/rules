#!/usr/bin/make -f

%:
	dh $@

override_dh_auto_build:
	cd src/frontend/ && \
		npm config set prefix ~/.local && \
		npm install -g yarn && \
		~/.local/bin/yarn install && \
		node_modules/react-scripts/bin/react-scripts.js build && \
		mv build ../server/backend/

	dh_auto_build

override_dh_clean:
	rm -rf src/frontend/node_modules src/server/onboarding/build src/server/backend/build
	dh_clean

override_dh_installsystemd:
	dh_installsystemd --no-stop-on-upgrade --name=pt-web-portal
	dh_installsystemd --no-enable --no-start --name=pt-web-portal-port-busy
