#!/usr/bin/make -f

%:
	dh $@

override_dh_auto_build:
	cd src/frontend/ && \
		npm install && \
		node_modules/react-scripts/bin/react-scripts.js build && \
		mv build ../server/backend/

	dh_auto_build

override_dh_clean:
	rm -rf src/server/onboarding/build
	dh_clean

override_dh_installsystemd:
	dh_installsystemd --restart-after-upgrade --name=pt-web-portal
	dh_installsystemd --no-enable --name=pt-web-portal-port-busy
